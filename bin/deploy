#!/usr/bin/env php
<?php
/**
 * Created by PhpStorm.
 * User: Vladimir
 * Date: 16.11.17
 */

use div\DeployAgent\Application;
use div\DeployAgent\ClearOpCacheCommand;
use div\DeployAgent\InitCommand;
use div\DeployAgent\StartCommand;
use div\DeployAgent\StartWebDeployCommand;

require_once __DIR__ . '/../vendor/autoload.php';

$version = '1.0.1';

$app = new Application('Инструмент для развётрывания php приложений', $version);

$app->add(new InitCommand());
$app->add(new StartCommand());
$app->add(new StartWebDeployCommand());
$app->add(new ClearOpCacheCommand());

$app->setDefaultCommand('start');

$app->run();
